<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_default"
    android:elevation="@dimen/elevation_default"
    android:foreground="?selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:outlineProvider="background"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/onboarding_app_selection_app_icon_size"
        android:layout_height="@dimen/onboarding_app_selection_app_icon_size"
        android:padding="@dimen/onboarding_app_selection_app_icon_padding" />

    <TextView
        android:id="@+id/app_name"
        style="@style/TextAppearance.SolGuard.Label2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?colorOnSurfaceVariant" />

</LinearLayout>